<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/StopwatchActivity">

    <fragment
        android:id="@+id/StopwatchActivity"
        android:name="com.example.grindset.StopwatchActivity"
        android:label="@string/app_name"
        tools:layout="@layout/activity_stopwatch">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.grindset.SecondFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/StopwatchActivity" />
    </fragment>
</navigation>